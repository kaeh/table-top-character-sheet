{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@kaeh/configs": ["libs/configs/src/index.ts"],
      "@kaeh/features/brigandine": ["features/brigandine/src/index.ts"],
      "@kaeh/features/games-list": ["features/games-list/src/index.ts"],
      "@kaeh/functions": ["libs/functions/src/index.ts"],
      "@kaeh/models": ["libs/models/src/index.ts"],
      "@kaeh/persistence": ["libs/persistence/src/index.ts"],
      "@kaeh/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
